{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false, // Desativa geração de .js.map
    "sourceMap": false, // Desativa geração de .d.ts
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "outDir": "dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "types": ["node", "bcrypt"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
